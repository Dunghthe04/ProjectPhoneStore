extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-list-layout.pug
block main 
  +alert-success(3000)
  +alert-error(5000)
  .container.my-3 
    .row 
      .col-12 
        +box-head(pageTitle)
    .row 
      .col-12 
        table(class="table table-bordered")
          thead 
            tr 
              th STT 
              th Ảnh 
              th Tên 
              th Giá
              th Số lượng
              th Tổng tiền 
          tbody 
              each item,index in cartDetail.products
                tr 
                  td #{index+1}
                  td 
                    img(src=item.productInfo.thumbnail alt=item.productInfo.title width="80px")
                  td #{item.productInfo.title}
                  td #{item.productInfo.newPrice} $
                  td #{item.quantity}
                  td #{item.totalPrice} $
        h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPriceCart}$
    if(cartDetail.products.length > 0)
      h4 Thông tin khác hàng
      .row 
        .col-12 
          .card.p-4.my-4 
            form(
                action="/checkout/order"
                method="POST"
            )
              div(class="form-group")
                label(for="fullname") Họ tên 
                input(
                  type="text"
                  id="fullname"
                  name="fullname"
                  class="form-control"
                  required
                )
              div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                  type="text"
                  id="phone"
                  class="form-control"
                  name="phone"
                  required
                )
              div(class="form-group")
                label(for="email") Email
                input(
                  type="text"
                  id="email"
                  class="form-control"
                  name="email"
                  required
                )
              div(class="form-group")
                label(for="address") Địa chỉ
                input(
                  type="text"
                  id="address"
                  name="address"
                  class="form-control"
                  required
                )   
              div(class="form-group")
                button(
                    class="btn btn-success btn-block"
                    type="submit"
                ) Đặt hàng  
           
  script(src="/js/cart.js")          
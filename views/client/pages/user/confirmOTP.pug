extends ../../layouts/default.pug
include ../../mixins/alert
block main 
  +alert-success(3000)
  +alert-error(3000)
  .container.my-5 
    .row.justify-content-center 
      div(class="col-8") 
        h1(class="text-center") Xác minh mã OTP
        form(
            action=`/user/password/OPTconfirm`
            method="POST"
        )
          div(class="form-group")
            label(for="email") Email 
            input(
                type="text" 
                value=email
                class="form-control"
                id="email"
                name="email"
                readOnly=true
            )
          div(class="form-group")
            label(for="OTP") Mã OTP 
            input(
                type="text"
                class="form-control"
                id="OTP"
                name="otp"
            )  
          div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary btn-block"
            ) Xác nhận
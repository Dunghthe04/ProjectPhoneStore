extends ../../layouts/default.pug
include ../../mixins/alert
block main 
  +alert-success(3000)
  +alert-error(3000)
  .container.my-5 
    .row.justify-content-center 
      div(class="col-8" style="background-color: cyan; padding: 60px 24px; border-radius: 14px;") 
        h1(class="text-center") Đăng Ký tài khoản
        form(
            action=`/user/register`
            method="POST"
        )
          div(class="form-group")
            label(for="fullname") Họ và tên 
            input(
                type="text"
                class="form-control"
                id="fullname"
                name="fullname"
                required
            )
          div(class="form-group")
            label(for="email") Email
            input(
                type="text"
                class="form-control"
                name="email"
                id="email"
                required
            )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                name="password"
                id="password"
                required
            )  
          div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary btn-block"
            ) Đăng ký
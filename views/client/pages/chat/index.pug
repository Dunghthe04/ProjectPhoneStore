extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
   .container.my-3 
        .row 
         .col-12 
           +box-head("chat")
       
        .row
            .col-12
                //-Biến cở , dùng để xác định đoạn chat của ai
                .chat(user_id=user.id)
                    .inner-body
                        //-Duyet tung ban ghi
                        each item in chats
                            //-kiểm tra xem nếu user tin nhắn đó = id của user hiện tại -> bên phải , ẩn tên,outgoing
                            div(class=(item.user_id==user.id)?"inner-outgoing":"inner-incoming")
                                if(item.user_id!=user.id)
                                  .inner-name #{item.fullname}
                                .inner-content #{item.content}
                    .inner-foot
                        form(class="inner-form" action="")
                            input(type="text" placeholder="Nhập nội dung..." name="content")
                            span(class="button-icon btn btn-light ") <i class="fa-regular fa-face-smile"></i>
                            button
                                i.fa-solid.fa-paper-plane  
   div(class="tooltip" role="tooltip") 
    emoji-picker                        
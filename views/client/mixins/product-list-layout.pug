mixin product-list-layout(listproduct)
   .row 
      each item in listproduct
        .col-3.mb-3 
          .product-item 
              .inner-image
                img(src=item.thumbnail alt=item.title) 
                if(item.featured)
                   .inner-feature Nổi bật
              .inner-content 
                    a(
                      href=`/products/detail/${item.slug}`
                      style="color: black; text-decoration: none;"
                    )
                     h3.inner-title #{item.title}
                    .inner-price-new #{item.newPrice}$
                    .inner-price-old #{item.price}$
                    .inner-discount -#{item.discountPercentage}%
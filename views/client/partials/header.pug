include ../mixins/sub-menu.pug
header.header 
   .container 
     .row.align-items-center 
       .col-3
         .inner-logo 
           img(src=setting.logo alt="Logo")

       .col-5 
         form(
          action='/search'
          method="GET"
         )    
          div(class="form-group d-flex mb-0")
           input(
            type="text"
            placeholder="Nhập từ khóa để tìm kiếm"
            name="keyword"
            class="form-control"
            value=keyword
          )
           button(
              type="submit"
              class="btn btn-primary"
            ) Tìm

       .col-4
         .inner-menu 
            ul 
             li 
               a(href="/") Trang Chu 

             li(class="sub-menu") 
               -const pathProduct="/products";
               a(href=pathProduct) San pham 
                +sub-menu(layoutProductCategory,pathProduct)
             li
               //-nếu chưa có giỏ hàng -> in o, nếu có r-> in số lg
               a(href="/cart") Giỏ hàng(#{cart && cart.quantityProduct ? cart.quantityProduct : 0})
             //-nếu có user thì hiện đăng xuất
             if(user) 
               li
                a(href="/chat") Chat  
               li
                a(href="/user/info") #{user.fullname}      
               li
                a(href="/user/logout") Đăng xuất   
             else 
               li
                a(href="/user/register") Đăng ký     
               li
                a(href="/user/login") Đăng nhập 
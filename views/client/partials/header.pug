include ../mixins/sub-menu.pug
header.header 
   .container 
     .row.align-items-center 
       .col-3
         .inner-logo 
           img(src="/images/logo.svg" alt="Logo")

       .col-5 
         form(
          action='/search'
          method="GET"
         )    
          div(class="form-group d-flex mb-0")
           input(
            type="text"
            placeholder="Nhập từ khóa để tìm kiếm"
            name="keyword"
            class="form-control"
            value=keyword
          )
           button(
              type="submit"
              class="btn btn-primary"
            ) Tìm

       .col-4
         .inner-menu 
            ul 
             li 
               a(href="/") Trang Chu 

             li(class="sub-menu") 
               -const pathProduct="/products";
               a(href=pathProduct) San pham 
                +sub-menu(layoutProductCategory,pathProduct)
             li
               //-nếu chưa có giỏ hàng -> in o, nếu có r-> in số lg
               a(href="#") Giỏ hàng(#{cart.quantityProduct? cart.quantityProduct:0})   
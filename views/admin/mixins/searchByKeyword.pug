mixin searchByKeyword(keywordSearch)
  form(id="form-search")
           .input-group 
            input(
              type="text"
              placeholder="Nhập từ khóa"
              name="keyword"
              class="form-control"
              value=keywordSearch
            )
            .input-group-append 
              button(
                type="submit"
                class="btn btn-success"
              ) Tìm
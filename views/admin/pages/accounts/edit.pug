extends ../../layouts/default.pug
include ../../mixins/alert
include ../../mixins/tree
block main 
    h1(class="mb-4") Chỉnh sửa tài khoản 
    +alert-success(3000)
    +alert-error(3000)
    form(
        action=`${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
        method="POST"
        class="form-create-prouct"
        enctype="multipart/form-data"
    )
      div(class="form-group")
         lable(for="fullname") Họ tên*
         input(
            id="fullname"
            type="text"
            name="fullname"
            class="form-control"
            value=account.fullname
            require
         )
      div(class="form-group")
         lable(for="email") Email*
         input(
            id="email"
            type="text"
            name="email"
            class="form-control"
            value=account.email
            require
         )
            
      div(class="form-group")
         lable(for="password") Mật khẩu*
         input(
            id="password"
            type="password"
            name="password"
            class="form-control"
         ) 
      div(class="form-group")
         lable(for="phone") Số điện thoại
         input(
            id="phone"
            type="text"
            name="phone"
            class="form-control"
            value=account.phone
            require
         )    
      div(
         class="form-group"
         upload-image
         )
            lable(for="avatar") Avatar
            input(
               id="avatar"
               type="file"
               name="avatar"
               class="form-control-file"
               accept="image/*"
               input-upload-image
            )  
            img(
               src=account.avatar
               upload-image-preview
               class="uploadPreview"
            )
            
      div(class="form-group")
         lable(for="role_id") Phân quyền
         select(
            name="role_id"
            id="role_id"
            class="form-control"
         )
          option(disabled) --Chọn--
          each item in role 
            option(value=item.id selected=(item.id==account.role_id)) #{item.title}
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(account.status=="active")
         )
         label(for="statusActive" class="form-check-label") Hoạt động 
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusInactive"
            name="status"
            value="inactive"
            checked=(account.status=="inactive")
         )
         label(for="statusInactive" class="form-check-label") Dừng hoạt động      
      div(class="form-group")
        button(
            type="submit"
            class="btn btn-primary"
        ) Cập nhập 
    script(src="/admin/js/products.js")       

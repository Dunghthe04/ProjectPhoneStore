extends ../../layouts/auth.pug
include ../../mixins/alert
block main 
  +alert-success(3000)
  +alert-error(3000)
  .container.my-5 
    .row.justify-content-center 
      div(class="col-8" style="background-color: cyan; padding: 60px 24px; border-radius: 14px;") 
        h1(class="text-center") Đăng nhập
        form(
            action=`${prefixAdmin}/auth/login`
            method="POST"
        )
          div(class="form-group")
            label(for="email") Email 
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
            )
          div(class="form-group")
            label(for="password") Mật khẩu 
            input(
                type="password"
                class="form-control"
                name="password"
                id="password"
                required
            )
          div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary btn-block"
            ) Đăng nhập
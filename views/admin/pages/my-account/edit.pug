extends ../../layouts/default.pug
include ../../mixins/alert
include ../../mixins/tree
block main 
    h1(class="mb-4") chỉnh sửa thông tin tài khoản
    +alert-success(3000)
    +alert-error(3000)
    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
      div(class="form-group")
         lable(for="fullname") Họ tên *
         input(
            id="fullname"
            type="text"
            name="fullname"
            class="form-control"
            value=account.fullname
         )
      div(class="form-group")
         lable(for="email") Email *
         input(
            id="email"
            type="text"
            name="email"
            class="form-control"
            value=account.email
         )
      div(class="form-group")
         lable(for="password") Mật khẩu
         input(
            id="password"
            type="text"
            name="password"
            class="form-control"
         )
      div(class="form-group")
         lable(for="phone") Số điện thoại
         input(
            id="phone"
            type="text"
            name="phone"
            class="form-control"
            value=account.phone
         )   
      div(
         class="form-group"
         upload-image
         )
            lable(for="avatar") Ảnh
            input(
               id="avatar"
               type="file"
               name="avatar"
               class="form-control-file"
               accept="image/*"
               input-upload-image
            )  
            img(
               src=account.avatar
               upload-image-preview
               class="uploadPreview"
            )
      div(class="form-group")
        button(
            type="submit"
            class="btn btn-primary"
        ) Chỉnh sửa 
    script(src="/admin/js/products.js")       

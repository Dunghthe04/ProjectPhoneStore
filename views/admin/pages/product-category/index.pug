extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug
block main 
 if(roleAccount.permissions.includes("product-category-view"))
  h1 Danh mục sản phẩm
    +alert-success(3000)
    +alert-error(3000)
    .card.mb-3 
    .card-header Danh sách sản phẩm
      .card-body 
      .row 
          .col-9
          .col-3
            .row 
              .col-5
                  if(roleAccount.permissions.includes("product-category-add"))
                    a(
                      href=`${prefixAdmin}/product-category/create`
                      class="btn btn-outline-success"
                      ) + Thêm mới 
              .col-4
                  if(roleAccount.permissions.includes("product-category-delete"))
                    a(
                      href=`${prefixAdmin}/product-category/recover`
                      class="d-flex justify-content-end"
                    )
                     button(class="btn btn-dark btn-sm") Xóa gần đây      
      table(
        class="table table-hover table-sm"
        check-box-multi
      )
        thead 
              tr 
                th 
                  input(type="checkbox" name="checkall")
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Vị trí
                th Trạng thái 
                th Hành động
        tbody 
            +table-tree(newRecord)
    form(
      action=""
      method="POST"
      id="formDeletecatgory"
      path=`${prefixAdmin}/product-category/delete`
    )            
              
    script(src="/admin/js/products.js")                    
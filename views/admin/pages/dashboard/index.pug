extends ../../layouts/default.pug

block main 
 h1 Trang Tong Quan
 div #{user}
 .row.mt-4
  .col-12
    .card.mb-4
      .card-header Thông tin tài khoản
      .card-body
        if(account.avatar)
          img(
            src=account.avatar
            style="height: 100px; margin-bottom: 15px;"
          )
        if(account.fullName)
          p Họ tên: <b>#{account.fullName}</b>
        if(account.email)
          p Email: <b>#{account.email}</b>
        if(account.phone)
          p Số điện thoại: <b>#{account.phone}</b>
        if(account.title)
          p Phân quyền: <b>#{role.title}</b>
  .col-6 
     .card-header Danh mục sản phẩm 
     .card-body 
        p Số lượng: <b>#{statistic.categoryProduct.total}</b>    
        p Đang hoạt đông: <b>#{statistic.categoryProduct.active}</b> 
        p Dừng hoạt đông: <b>#{statistic.categoryProduct.inactive}</b>   
  .col-6 
     .card-header Sản phẩm 
     .card-body 
        p Số lượng: <b>#{statistic.product.total}</b>    
        p Đang hoạt đông: <b>#{statistic.product.active}</b> 
        p Dừng hoạt đông: <b>#{statistic.product.inactive}</b>   
  .col-6 
     .card-header Tài khoản admin
     .card-body 
        p Số lượng: <b>#{statistic.account.total}</b>    
        p Đang hoạt đông: <b>#{statistic.account.active}</b> 
        p Dừng hoạt đông: <b>#{statistic.account.inactive}</b>   
  .col-6 
     .card-header Tài khoản khách hàng
     .card-body 
        p Số lượng: <b>#{statistic.user.total}</b>    
        p Đang hoạt đông: <b>#{statistic.user.active}</b> 
        p Dừng hoạt đông: <b>#{statistic.user.inactive}</b>                   
extends ../../layouts/default.pug
include ../../mixins/alert
include ../../mixins/tree
block main 
    h1(class="mb-4") Chỉnh sửa sản phẩm 
    +alert-success(3000)
    +alert-error(3000)
    form(
        action=`${prefixAdmin}/products/edit/${productEdit.id}?_method=PATCH`
        method="POST"
        class="form-create-prouct"
        enctype="multipart/form-data"
    )
      div(class="form-group")
         lable(for="title") Tiêu đề
         input(
            id="title"
            type="text"
            name="title"
            class="form-control"
            value=productEdit.title
         )
      div(class="form-group")
         lable(for="category") Danh mục
         select(
           name="category"
           id="category"
           class="form-control"
         ) 
          option(value="") --Chọn danh mục--
          if(newRecord)
              +tree(newRecord,1,productEdit.category)   
      div(class="form-group")
         lable(for="description") Mô tả
         textarea(
            id="description"
            name="description"
            class="form-control tinymce"
            rows="5"
         ) !{productEdit.description}
      div(class="form-group")
         lable(for="price") Giá
         input(
            id="price"
            type="number"
            name="price"
            class="form-control"
            value=productEdit.price
            min="0"
         )     
      div(class="form-group")
         lable(for="discountPercentage") % Giảm giá
         input(
            id="discountPercentage"
            type="text"
            name="discountPercentage"
            class="form-control"
            value=productEdit.discountPercentage
            min="0"
         )  
      div(class="form-group")
         lable(for="stock") Số lượng
         input(
            id="stock"
            type="text"
            name="stock"
            class="form-control"
            value=productEdit.stock
            min="0"
         )   
      div(
         class="form-group"
         upload-image
         )
            lable(for="thumbnail") Ảnh
            input(
               id="thumbnail"
               type="file"
               name="thumbnail"
               class="form-control-file"
               accept="image/*"
               input-upload-image
            )  
            img(
               src=productEdit.thumbnail
               upload-image-preview
               class="uploadPreview"
            )
            
      div(class="form-group")
         lable(for="position") Vị trí
         input(
            id="position"
            type="text"
            name="position"
            class="form-control"
            placeholder="Tự động tăng"
            min="1"
            value=productEdit.position
         ) 
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(productEdit.status=="active"?true:false)
         )
         label(for="statusActive" class="form-check-label") Hoạt động 
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="inactive"
            checked=(productEdit.status=="inactive"?true:false)
         )
         label(for="statusActive" class="form-check-label") Dừng hoạt động      
      div(class="form-group")
        button(
            type="submit"
            class="btn btn-primary"
        ) Tạo mới 
    script(src="/admin/js/products.js")       

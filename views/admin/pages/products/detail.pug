extends ../../layouts/default.pug
block main 
  if(product.title)
    h1(class="mb-4") #{product.title}
  if(categoryName)
    div(class="mb-4") Danh mục: <b>#{categoryName}</b> 
  if(product.price)
    div(class="mb-4") Giá: <b>#{product.price}$</b>
  if(product.discountPercentage)
    div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}$</b>
  if(product.stock)
    div(class="mb-4") Còn lại #{product.stock}
  if(product.thumbnail)
    div(class="mb-4")
      img(
        src=product.thumbnail
        style="width: 100px"
      )
  if(product.status)
    div(class="mb-4")
      span Trạng thái: 
      if(product.status=="active")
        span(class="badge badge-success") Hoạt động
      else 
        span(class="badge badge-danger") Dừng hoạt động  

  if(product.position)  
    div(class="mb-4") Vị trí #{product.position} 
  if(product.description)  
    div(class="mb-4") Mô tả !{product.description} 

  a(
    href=`${prefixAdmin}/products/edit/${product.id}`
    class="btn btn-warning btn-sm") Sửa 
  a(
    href=`${prefixAdmin}/products`
    class="btn btn-info btn-sm ml-1") Quay lại    
  script(src="/admin/js/product.js")       

  

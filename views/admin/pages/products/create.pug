extends ../../layouts/default.pug
include ../../mixins/alert
include ../../mixins/tree
block main 
   if(roleAccount.permissions.includes("product-add"))
    h1(class="mb-4") Thêm mới sản phẩm 
    +alert-success(3000)
    +alert-error(3000)
    form(
        action=`${prefixAdmin}/products/create`
        method="POST"
        class="form-create-prouct"
        enctype="multipart/form-data"
    )
      div(class="form-group")
         lable(for="title") Tiêu đề
         input(
            id="title"
            type="text"
            name="title"
            class="form-control"
         )
      div(class="form-group mb-3")
         lable(for="category") Danh mục cha
         select(
           name="category"
           id="category"
           class="form-control"
           required
         ) 
          option(value="") --Chọn danh mục cha--
          if(newRecord)
              +tree(newRecord) 
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="featured1"
            name="featured"
            value="1"
            checked
         )
         label(for="featured1" class="form-check-label") Nổi bật
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="featured0"
            name="featured"
            value="0"
         )
         label(for="featured0" class="form-check-label") Không                
      div(class="form-group  mt-3")
         lable(for="description") Mô tả
         textarea(
            id="description"
            name="description"
            class="form-control tinymce"
            rows="5"
         )  
      div(class="form-group")
         lable(for="price") Giá
         input(
            id="price"
            type="number"
            name="price"
            class="form-control"
            value="0"
            min="0"
         )     
      div(class="form-group")
         lable(for="discountPercentage") % Giảm giá
         input(
            id="discountPercentage"
            type="text"
            name="discountPercentage"
            class="form-control"
            value="0"
            min="0"
         )  
      div(class="form-group")
         lable(for="stock") Số lượng
         input(
            id="stock"
            type="text"
            name="stock"
            class="form-control"
            value="0"
            min="0"
         )   
      div(
         class="form-group"
         upload-image
         )
            lable(for="thumbnail") Ảnh
            input(
               id="thumbnail"
               type="file"
               name="thumbnail"
               class="form-control-file"
               accept="image/*"
               input-upload-image
            )  
            image(
               src=""
               upload-image-preview
               class="uploadPreview"
            )
            
      div(class="form-group")
         lable(for="position") Vị trí
         input(
            id="position"
            type="text"
            name="position"
            class="form-control"
            placeholder="Tự động tăng"
            min="1"
         ) 
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked
         )
         label(for="statusActive" class="form-check-label") Hoạt động 
      div(class="fom-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="inactive"
         )
         label(for="statusActive" class="form-check-label") Dừng hoạt động      
      div(class="form-group")
        button(
            type="submit"
            class="btn btn-primary"
        ) Tạo mới 
    script(src="/admin/js/products.js")       
